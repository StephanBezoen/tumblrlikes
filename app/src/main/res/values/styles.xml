<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopupListItem" parent="AppTheme">
        <item name="android:paddingStart">@dimen/popup_list_padding</item>
        <item name="android:paddingEnd">@dimen/popup_list_padding_end</item>
        <item name="android:textColor">@color/list_item_text</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textSize">@dimen/popup_list_item_text_size</item>
        <item name="android:drawablePadding">@dimen/popup_list_item_icon_padding</item>
    </style>

</resources>
