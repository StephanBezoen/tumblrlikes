<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popup_overlay_background"
    android:id="@+id/container"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/action_menu_bg"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/popup_list_margin"
            android:paddingBottom="@dimen/popup_list_margin"
            android:elevation="10dp"
            >

            <TextView
                android:id="@+id/favoriteButton"
                android:text="@string/photo_action_favourite"
                style="@style/PopupListItem"
                android:drawableStart="@drawable/ic_star_border_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/popup_list_item_height"
                />

            <TextView
                android:id="@+id/likeButton"
                android:text="@string/photo_action_like"
                style="@style/PopupListItem"
                android:drawableStart="@drawable/ic_thumbs_up_down_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/popup_list_item_height"/>

            <TextView
                android:id="@+id/hideButton"
                android:text="@string/photo_action_hide"
                style="@style/PopupListItem"
                android:drawableStart="@drawable/ic_block_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/popup_list_item_height"/>

            <TextView
                android:id="@+id/cameraButton"
                android:text="@string/photo_action_screenshot"
                style="@style/PopupListItem"
                android:drawableStart="@drawable/ic_photo_camera_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/popup_list_item_height"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/popup_list_padding"
                android:paddingEnd="@dimen/popup_list_padding"
                android:gravity="end"
                >

                <TextView
                    android:id="@+id/viewCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/body_text"
                    android:layout_marginStart="6dp"
                    tools:text="View count: 255"
                    android:textSize="12sp"
                    />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>